<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="8dp"
    android:orientation="vertical">

    <EditText
        android:id="@+id/et_input"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@drawable/bg_border"
        android:inputType="none"
        android:gravity="center_vertical|right"
        android:layout_marginBottom="10dp"
        android:text="0942342"
        android:textSize="30sp"/>

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:columnCount="4"
        android:orientation="horizontal"
        android:rowCount="5"
        android:layout_gravity="center">
        　
        <Button
            android:id="@+id/clean"
            android:text="C"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            android:background="@drawable/button_border"
            />　

        <Button
            android:text="←"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            android:background="@drawable/button_border"/>　

        <Button
            android:id="@+id/devide"
            android:text="/"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            android:background="@drawable/button_border"/>

        <Button
            android:id="@+id/multiply"
            android:text="×"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            android:background="@drawable/button_border"/>　　

        <Button
            android:id="@+id/one"
            android:text="1"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            android:background="@drawable/button_border"/>
        　　
        <Button
            android:id="@+id/two"
            android:text="2"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            android:background="@drawable/button_border"/>
        　　　
        <Button
            android:id="@+id/three"
            android:text="3"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            android:background="@drawable/button_border"/>
        　　
        <Button
            android:id="@+id/minus"
            android:text="-"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            android:background="@drawable/button_border"/>
        　　
        <Button
            android:id="@+id/four"
            android:text="4" android:textColor="@android:color/white"
            android:textSize="20sp"
            android:background="@drawable/button_border"/>
        　　
        <Button
            android:id="@+id/five"
            android:text="5" android:textColor="@android:color/white"
            android:textSize="20sp"
            android:background="@drawable/button_border"/>
        　　

        <Button
            android:id="@+id/six"
            android:text="6" android:textColor="@android:color/white"
            android:textSize="20sp"
            android:background="@drawable/button_border"/>　　

        <Button
            android:id="@+id/plus"
            android:text="+" android:textColor="@android:color/white"
            android:textSize="20sp"
            android:background="@drawable/button_border"/>

        <Button
            android:id="@+id/seven"
            android:text="7"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            android:background="@drawable/button_border"/>
        　　
        <Button
            android:id="@+id/eight"
            android:text="8"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            android:background="@drawable/button_border"/>
        　　
        <Button
            android:id="@+id/nine"
            android:text="9"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            android:background="@drawable/button_border"/>
        <Button
            android:id="@+id/equal"
            android:layout_rowSpan="2"
            android:layout_gravity="fill"
            android:text="="
            android:textColor="@android:color/white"
            android:textSize="20sp"
            android:background="@drawable/button_border"/>
        <Button
            android:id="@+id/zero"
            android:layout_columnSpan="2"
            android:layout_gravity="fill"
            android:text="0"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            android:background="@drawable/button_border"/>　　

        <Button
            android:id="@+id/point"
            android:text="." android:textColor="@android:color/white"
            android:textSize="20sp"
            android:background="@drawable/button_border"/>




    </GridLayout>
</LinearLayout>
